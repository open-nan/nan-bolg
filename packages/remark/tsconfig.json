{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "paths": {
      "@plugins/*": ["plugins/*"],
      "@lib/*": ["lib/*"],
    },
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
