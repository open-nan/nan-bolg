{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["script/**/*.ts", "./index.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
